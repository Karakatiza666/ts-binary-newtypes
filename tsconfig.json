{
   "compilerOptions": {
      "target": "es2017",
      "module": "es6",
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
         "src/*": [ "./src/*" ]
      }
   },
   "include": [
     "src/**/*"
   ],
   "tsc-alias": {
     "resolveFullPaths": true
   }
}